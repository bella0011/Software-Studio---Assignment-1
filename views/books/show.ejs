<h2> <%= book.title %> </h2>
<img src="<%= book.coverImagePath %>" /> 
<div> Author: <%= book.author %> </div>
<div> Publish Date: <%= book.publishDate.toDateString() %> </div>
<div> Page Count: <%= book.pageCount %> </div>
<div> Description: <%= book.description %> </div>
<div> Stock Available: <%= book.stock %> </div>
<a href="/books/<%=book._id%>/edit"> Edit </a>
<%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>

<div>
    <form action="/books/<%=book._id%>/issue/<%=currentUser._id%>" method="POST" class="d-inline">
        <input class="btn btn-xs btn-success" type="submit" value="Issue">
    </form>
</div>
